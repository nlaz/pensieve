{
  "name": "pensieve",
  "version": "0.0.0",
  "description": "memory tool",
  "main": "src/server.js",
  "scripts": {
    "test": "mocha --colors --require babel-register './config/mocha.js' './client/**/*.spec.jsx' ",
    "start": "yarn build && yarn serve",
    "prod": "NODE_ENV=production yarn build && yarn serve",
    "build": "yarn build:client && yarn build:server",
    "serve": "node ./build/bundle.server.js",
    "build:client": "webpack --config config/webpack.client.config.js",
    "build:server": "webpack --config config/webpack.server.config.js",
    "forever": "yarn start:prod",
    "start:prod": "forever start -c 'yarn prod' ./",
    "stop": "forever stopall",
    "lint": "eslint ./client",
    "script": "babel-node"
  },
